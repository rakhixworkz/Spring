<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- bean definitions here -->
	
	<bean id="iplRepositoryImpl" class="com.xworkz.ipl.repository.IplRepositoryImpl">
	<constructor-arg ref="localContainerEntityManagerFactoryBean"></constructor-arg>
	
	</bean>
	<bean id="iplServiceImpl" class="com.xworkz.ipl.service.IplServiceImpl">
	<constructor-arg ref="iplRepositoryImpl"></constructor-arg>
	
	</bean>
	<bean id="localContainerEntityManagerFactoryBean" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
	<property name="dataSource" ref="driverManagerDataSource"></property>
	</bean>
	<bean id="driverManagerDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	<constructor-arg value="jdbc:mysql://localhost:3306/company" ></constructor-arg>
	<constructor-arg value="root"></constructor-arg>
	<constructor-arg value="Bhai@123"></constructor-arg>
	</bean>
</beans>